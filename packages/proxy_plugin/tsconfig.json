{
  "compilerOptions": {
    /* 基本选项 */
    "target": "es5",                     // 编译输出目标为ES5
    "module": "commonjs",                // 使用CommonJS模块系统
    "lib": ["dom", "es5", "es2015", "es2016"], // 包括dom和ES5及其之后的类型定义
    "declaration": true,                 // 生成相应的 '.d.ts' 声明文件
    "outDir": "./lib",                   // 指定输出目录
    "rootDir": "./src",                  // 指定输入文件的根目录
    "strict": true,                      // 启用所有严格类型检查选项
    "esModuleInterop": true,             // 允许默认导入从不带有默认导出的模块

    /* 高级选项 */
    "skipLibCheck": true,                // 跳过库文件的类型检查
    "forceConsistentCasingInFileNames": true, // 禁止对同一个文件的不一致的引用

    /* 模块解析选项 */
    "moduleResolution": "node",          // 模块解析策略
    "baseUrl": "./",                     // 基础目录，用于解析非相对模块名称
    "paths": {                           // 路径映射，用于设置别名
      "*": ["node_modules/*"]
    },

    /* 调试与映射选项 */
    "sourceMap": true,                   // 生成相应的 '.map' 文件
    "inlineSourceMap": false,            // 发出单个文件中的源映射，而不是单独的文件

    /* 其他选项 */
    "removeComments": true               // 从输出中删除注释
  },
  "include": [
    "src/**/*"                           // 指定要包含在编译中的文件夹
  ],
  "exclude": [
    "node_modules",                      // 排除不需要编译的文件夹
    "**/*.spec.ts"                       // 排除测试文件
  ]
}